<GuiXml> 
	<Controls>
		<TopLevelControl name="DolgubonSetCrafterToggle" clampedToScreen="true" mouseEnabled="false" movable="true" hidden="false" >	
			<Dimensions x="75" y="75" />
			<Anchor point="TOPRIGHT"  relativeTo="GuiRoot" relativePoint="TOPRIGHT" offsetX="50" offsetY="50"/>
			<Controls>
				<Button name="$(parent)Button" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="false"  >
					<Anchor point="TOPRIGHT"  relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="0" offsetY="0"/>
					<Dimensions x="75" y="75" />
						<Textures normal="esoui/art/icons/housing_dwe_inc_anvila001.dds"/>
						<OnClicked>
							DolgubonSetCrafter.close()
						</OnClicked>

				</Button>
			</Controls>
		</TopLevelControl>

		<TopLevelControl name="DolgubonSetCrafterWindow" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="true" >	
			<Dimensions x="1050" y="690" />
			<Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="300" offsetY="-100"/>
			<OnMoveStop>DolgubonSetCrafter.onWindowMove(self) </OnMoveStop>

		    <Controls>
		    	
		    	<!--Setting up the window -->
		    	<Backdrop name="$(parent)Backdrop"  alpha="1" inherits="ZO_DefaultBackdrop" centerColor="666666">
		    		<Anchor point="TOPLEFT"  relativeTo="$(parent)" relativePoint="TOPLEFT"/>
		    		<Dimensions x="1050" y="650" />
		    	</Backdrop>
		    	<Button name="$(parent)Close" alpha="1" clickSound="Default_Click" topmost="true">
		    		<Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
     				<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="20" />
      				<Dimensions x="48" y="48" />
					<OnClicked>
						DolgubonSetCrafter.close()
					</OnClicked>
		    	</Button>
		    	<Label name="$(parent)Title" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Dolgubon's Lazy Set Crafter">
        			<Anchor point="TOP" relativeTo="$(parent)PatternInput" relativePoint="TOP" offsetX="-125" offsetY="10" />
    			</Label>
		    	<Label name="$(parent)Output" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="">
        			<Anchor point="CENTER" relativeTo="$(parent)PatternInput" relativePoint="TOP" offsetX="-125" offsetY="80" />
    			</Label>
    			<!----------------------------------------------------------------->
    			<!-- Creating XML controls for Input/-->
    			<!-- Creating the holder for the pieces Input/-->
		    	<Label name="$(parent)PatternInput" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="PATTERN_HEADER">

        			<Anchor point="LEFT" relativeTo="$(parent)Backdrop" relativePoint="TOPLEFT" offsetX="0" offsetY="55" />
        			<Anchor point="RIGHT" relativeTo="$(parent)Backdrop" relativePoint="TOPRIGHT" offsetX="-250" offsetY="55" />
    			</Label>
    			<!-- Creating the holder for the comboboxes/-->
    			<Label name="$(parent)Comboboxes" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Attributes">
    				<Dimensions x="800" y="25"/>
        			<Anchor point="LEFT" relativeTo="$(parent)PatternInput" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="105" />
        			<Anchor point="RIGHT" relativeTo="$(parent)PatternInput" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="105" />
    			</Label>

    			<Button name="$(parent)Add" alpha="1" clickSound="Default_Click" topmost="true" text="Add To Queue" inherits="ZO_DefaultButton">
     				<Anchor point="BOTTOM" relativeTo="$(parent)Comboboxes" relativePoint="BOTTOM" offsetX="0" offsetY="200" />
      				<Dimensions x="200" y="28" />
					<OnClicked>
						
						DolgubonSetCrafter.craft()
					</OnClicked>
		    	</Button>
		    	<Button name="$(parent)ResetSelections" alpha="1" clickSound="Default_Click" topmost="true" text="Reset to Default" inherits="ZO_DefaultButton">
     				<Anchor point="BOTTOM" relativeTo="$(parent)Comboboxes" relativePoint="BOTTOMRIGHT" offsetX="-150" offsetY="200" />
      				<Dimensions x="200" y="28" />
					<OnClicked>
						DolgubonSetCrafter.resetChoices()
					</OnClicked>
		    	</Button>
		    	<Button name="$(parent)ClearQueue" alpha="1" clickSound="Default_Click" topmost="true" text="Clear Queue" inherits="ZO_DefaultButton">
     				<Anchor point="BOTTOM" relativeTo="$(parent)Comboboxes" relativePoint="BOTTOMLEFT" offsetX="150" offsetY="200" />
      				<Dimensions x="200" y="28" />
					<OnClicked>
						DolgubonSetCrafter.clearQueue()
					</OnClicked>
		    	</Button>

		    	<!-- Scroll queue list-->
		    	<Control name="CraftingQueueScroll" hidden="false" mouseEnabled="true" clampedToScreen="true" movable="false">
					<Dimensions x="750" y="250" />
					<Anchor point="TOP" relativeTo="$(parent)Add" relativePoint="BOTTOM" offsetX="0" offsetY="0" />
					<Controls>
						<Label name="$(parent)Label" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Crafting Requests">
							<Anchor point="TOP" relativeTo="$(parent)Backdrop" relativePoint="TOP" offsetX="0" offsetY="10" />
						</Label>
						<Label name="$(parent)Counter" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="">
							<Anchor point="LEFT" relativeTo="$(parent)Label" relativePoint="RIGHT" offsetX="0" offsetY="" />
						</Label>
						<Control name="$(parent)List" inherits="ZO_ScrollList">
							<Anchor point="BOTTOM" relativeTo="$(parent)" offsetY="-10" offsetX="10" relativePoint="BOTTOM"/>
							<Dimensions x="750" y="200" />
						</Control>
					</Controls>
				</Control>
				
				<Control name="$(parent)MaterialList" alpha="1"  mouseEnabled="false">
					<Dimensions x="250" y="490" />
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-15" offsetY="40" />
					<Controls>
						<Label name="$(parent)Label" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Material Requirements">
							<Anchor point="TOP" relativeTo="$(parent)Backdrop" relativePoint="TOP" offsetX="0" offsetY="10" />
						</Label>
						<Label name="$(parent)Counter" height="25" Alpha="1" color="FFFFFF" font="ZoFontGameLargeBold" verticalAlignment="TOP" horizontalAlignment="CENTER" text="">
							<Anchor point="LEFT" relativeTo="$(parent)Label" relativePoint="RIGHT" offsetX="0" offsetY="" />
						</Label>
						<Control name="$(parent)List" inherits="ZO_ScrollList" mouseEnabled="true">
							<Anchor point="BOTTOM" relativeTo="$(parent)" offsetY="-10" offsetX="10" relativePoint="BOTTOM"/>
							<Dimensions x="250" y="440" />
						</Control>
						<Texture name="$(parent)Divider" textureFile="esoui/art/miscellaneous/verticaldivider_64.dds" tier="HIGH">
							<Dimensions x="4" y="650"/>
							<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" offsetY="-25" offsetX="-10" />
						</Texture>
						<Button name="$(parent)OutputRequirements" alpha="1" topmost="true" text="Requirements To Chat" inherits="ZO_DefaultButton">
		     				<Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="0" offsetY="35" />
		      				<Dimensions x="200" y="28" />
							<OnClicked>
								local text = DolgubonSetCrafter.outputAllMats()
								--StartChatInput("Requires: "..text)
								
							</OnClicked>
				    	</Button>
				    	<Backdrop name="$(parent)Input" tier="HIGH" inherits="ZO_EditBackdrop">
							<Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="0" offsetY="70" />
							<Dimensions x="200"/>
							<Controls>
								<EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText">

									<OnInitialized>
										ZO_EditDefaultText_Initialize(self, "Enter @Userid")
										local editControlGroup = ZO_EditControlGroup:New()
										<<!-- 
											--Add new recipient and new subject into an edit group and add autocomplete for the recipient name
									        local editControlGroup = ZO_EditControlGroup:New()
									        MailBuddy.autoCompleteRecipient = ZO_AutoComplete:New(MailBuddy_MailSendRecipientsBoxEditNewRecipient, { AUTO_COMPLETE_FLAG_ALL }, nil, AUTO_COMPLETION_ONLINE_OR_OFFLINE, MAX_AUTO_COMPLETION_RESULTS)

									        editControlGroup:AddEditControl(MailBuddy_MailSendRecipientsBoxEditNewRecipient, MailBuddy.autoCompleteRecipient)
									        editControlGroup:AddEditControl(MailBuddy_MailSendSubjectsBoxEditNewSubject, nil)-->
									</OnInitialized>
									<OnTextChanged>
										if self:GetText() == "" then
											DolgubonSetCrafterWindowMaterialListInputBoxText:SetText("Enter Name")
										else
											DolgubonSetCrafterWindowMaterialListInputBoxText:SetText("")
										end
										
									</OnTextChanged>
								</EditBox>
							</Controls>
						</Backdrop>

				    	<Button name="$(parent)MailRequirements" alpha="1" clickSound="Default_Click" topmost="true" text="Requirements To Mail" inherits="ZO_DefaultButton">
		     				<Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="0" offsetY="105" />
		      				<Dimensions x="200" y="28" />
							<OnClicked>
								local text = DolgubonSetCrafter.mailAllMats()
								--StartChatInput("Requires: "..text)
								
							</OnClicked>
				    	</Button>
					</Controls>

				</Control>

    			<!-- Creating the input box -->
    			<Control name="$(parent)Input" tier="HIGH">
					<Anchor point="BOTTOM" relativeTo="$(parent)Comboboxes" relativePoint="CENTER" offsetX="-50" offsetY="50" />
					<Dimensions x="250"/>
					<Controls>
						<Backdrop name="$(parent)Input" tier="HIGH" inherits="ZO_EditBackdrop">
							<Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="RIGHT" offsetX="0" offsetY="0" />
							<Dimensions x="50"/>
							<Controls>
								<EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText" textType="number">

									<OnInitialized>
										ZO_EditDefaultText_Initialize(self, "")
										--DolgubonSetCrafterWindowInputBox = self
									</OnInitialized>
									<OnTextChanged>
										DolgubonSetCrafter.savedvars["level"] = self:GetText()
									</OnTextChanged>
								</EditBox>
							</Controls>
						</Backdrop>
						<Button name="$(parent)ToggleChampion" alpha="1"  topmost="true" ><!--inherits="ToggleButton">-->
	         				<Anchor point="RIGHT" relativeTo="$(parent)Input" relativePoint="LEFT" offsetX="-15" offsetY="0" />
	          				<Dimensions x="48" y="48" />
	          				<Textures mouseOver="esoui\art\treeicons\achievements_indexicon_champion_over.dds"/>
							<OnClicked>
								self:toggle()
							</OnClicked>
				    	</Button>
						
						<Label name="$(parent)CPLabel"  height="25" alpha="1" text="CP" color="FFFFFF" font="ZoFontGameLargeBold">
							<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)ToggleChampion" offsetX="-15"/>

						</Label>
						<Label name="$(parent)LevelLabel"  height="25" alpha="1" text="Level:" color="FFFFFF" font="ZoFontGameLargeBold">
							5<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" offsetX="0" />
							
						</Label>
					</Controls>
				</Control>
		    	<Control name="$(parent)MultiplierInput" tier="HIGH">
					<Anchor point="BOTTOM" relativeTo="$(parent)Comboboxes" relativePoint="CENTER" offsetX="-50" offsetY="50" />
					<Dimensions x="250"/>
					<OnInitialized>
						DolgubonSetCrafter = DolgubonSetCrafter or {}

						function DolgubonSetCrafter:GetMultiplier()
							return self:GetNamedChild("Input"):GetNamedChild("Box"):GetText()
						end
					</OnInitialized>
					<Controls>
						<Backdrop name="$(parent)Input" tier="HIGH" inherits="ZO_EditBackdrop">
							<Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="RIGHT" offsetX="0" offsetY="0" />
							<Dimensions x="150"/>
							<Controls>
								<EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText" textType="number" text="1">

									<OnInitialized>
										ZO_EditDefaultText_Initialize(self, "")
										--DolgubonSetCrafterWindowInputBox = self
									</OnInitialized>
									<OnTextChanged>
										DolgubonSetCrafter.savedvars["level"] = self:GetText()
									</OnTextChanged>
								</EditBox>
							</Controls>
						</Backdrop>

						<Label name="$(parent)Label"  height="25" alpha="1" text="Multiplier:" color="FFFFFF" font="ZoFontGameLargeBold">
							5<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" offsetX="0" />
							
						</Label>
					</Controls>
				</Control>
		    </Controls>
		</TopLevelControl>
		<TopLevelControl name="DolgubonSetCrafterConfirm" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="true">	
			<Dimensions x="300" y="200" />
			<Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="0" offsetY="-200"/>
			<Controls>
				<Backdrop name="$(parent)Backdrop"  alpha="1" inherits="ZO_DefaultBackdrop" centerColor="666666" >
		    		<Anchor point="TOPLEFT"  relativeTo="$(parent)" relativePoint="TOPLEFT"/>
		    		<Dimensions x="300" y="200" />
		    	</Backdrop>
				<Label name="$(parent)Output" text="Level" font="ZoFontGameLargeBold" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
					<Anchor point="TOP" relativePoint="TOP" relativeTo="$(parent)" offsetY="10"/>
				</Label>
	    		<Button name="$(parent)CraftButton" alpha="1" clickSound="Default_Click" topmost="true" text="Craft" inherits="ZO_DefaultButton">
     				<Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="-65" offsetY="-10" />
      				<Dimensions x="100" y="28" />
					<OnClicked>
						DolgubonSetCrafter.craft()
					</OnClicked>
		    	</Button>
	    		<Button name="$(parent)CancelButton" alpha="1" clickSound="Default_Click" topmost="true" text="Cancel" inherits="ZO_DefaultButton">
     				<Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="65" offsetY="-10" />
      				<Dimensions x="100" y="28" />
					<OnClicked>
						DolgubonSetCrafterConfirm:SetHidden(true)
					</OnClicked>
		    	</Button>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
